rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Default: Allow read/write for authenticated users
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Explicit rule for payment logos (though the wildcard above covers it, explicit is good for clarity)
    match /site-assets/payment-logos/{fileName} {
      allow read: if true; // Public read access for logos
      allow write: if request.auth != null;
    }

    // Allow public read for cover images and profile images
    match /cover-images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /profile-images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow public read for other public content
    match /product-images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /event-flyers/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /quiz-images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /default-cover-images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Default: Allow read/write for authenticated users
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
