{
  "functions": [
    {
      "source": "backend/payment-handler",
      "codebase": "payment-handler",
      "runtime": "nodejs20"
    },
    {
      "source": "backend/send-notification",
      "codebase": "send-notification",
      "runtime": "nodejs20"
    },
    {
      "source": "backend/fcm-notifications",
      "codebase": "fcm-notifications",
      "runtime": "nodejs20"
    },
    {
      "source": "backend/storage-cleanup",
      "codebase": "storage-cleanup",
      "runtime": "nodejs20"
    },
    {
      "source": "backend/gdrive-image-fetcher",
      "codebase": "gdrive-image-fetcher",
      "runtime": "nodejs20"
    },
    {
      "source": "backend/google-meet-handler",
      "codebase": "google-meet-handler",
      "runtime": "nodejs20"
    },
    {
      "source": "backend/marx-payment-handler",
      "codebase": "marx-payment-handler",
      "runtime": "nodejs20"
    },
    {
      "source": "backend/og-image-handler",
      "codebase": "og-image-handler",
      "runtime": "nodejs20"
    },
    {
      "source": "backend/telegram-bot",
      "codebase": "telegram-bot",
      "runtime": "nodejs20"
    },
    {
      "source": "backend/chat-notifications",
      "codebase": "chat-notifications",
      "runtime": "nodejs20"
    },
    {
      "source": "backend/database-triggers",
      "codebase": "database-triggers",
      "runtime": "nodejs20"
    },
    {
      "source": "backend/ssr-handler",
      "codebase": "ssr-handler",
      "runtime": "nodejs20"
    },
    {
      "source": "backend/broadcast-notifications",
      "codebase": "broadcast-notifications",
      "runtime": "nodejs20"
    },
    {
      "source": "backend/sitemap-generator",
      "codebase": "sitemap-generator",
      "runtime": "nodejs20"
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]
      },
      {
        "source": "assets/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/sitemap.xml",
        "function": "generateSitemap"
      },
      {
        "source": "/payment-callback",
        "function": "paymentHandler"
      },
      {
        "source": "**",
        "function": "ssrHandler"
      }
    ]
  }
}